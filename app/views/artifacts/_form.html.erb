<%= bootstrap_form_with(model: artifact, multipart: true, local: true) do |form| %>
  <% if artifact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>

      <ul>
      <% artifact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-md-6">
    <div class="field">
      <%= form.text_field :name %>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <div class="input-group">
      <label class="input-group-btn">
          <span class="btn btn-info btn-sm">
              Browse <input id="my-file-selector" type="file" style="display:none;" onchange="$('#upload-file-info').val($(this).val());">
          </span>
      </label>
      <input type="text" class="form-control" id="upload-file-info" readonly>
    </div>

    <div class="field">
      <%= form.text_field :description %>
    </div>

    <div class="actions">
      <%= form.submit "Save" %>
    </div>

</div>
<% end %>
